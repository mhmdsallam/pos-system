{
  "name": "restaurant-pos-system",
  "version": "2.0.0",
  "description": "Offline Restaurant POS System",
  "main": "electron/main.js",
  "scripts": {
    "start:backend": "npx nodemon backend/server.js",
    "start:frontend": "npm run dev --prefix frontend",
    "build:frontend": "npm run build --prefix frontend",
    "electron:dev": "concurrently \"npm run start:backend\" \"cross-env BROWSER=none npm run start:frontend\" \"wait-on http://localhost:5173 http://localhost:3001/api/health && electron .\"",
    "electron:build": "npm run build:frontend && electron-builder",
    "install:all": "npm install && npm install --prefix frontend"
  },
  "keywords": [
    "pos",
    "restaurant",
    "electron",
    "offline"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^20.44.4",
    "wait-on": "^7.2.0"
  }
}
